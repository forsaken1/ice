# Инсталляция SSHFS
sudo apt-get install sshfs

# Загрузка модуля
sudo modprobe fuse

# Настройка прав доступа
sudo adduser username fuse
sudo chown root:fuse /dev/fuse 

# Подключение
mkdir ~/remoteserver
sshfs deployer@repa.su:/ ~/www/repa_su

# Размонтировать
umount ~/remoteserver


######################

cat /proc/mdstat
fdisk -l
mount
cat /etc/fstab
cat /etc/mtab
cat /etc/mdadm/mdadm.conf